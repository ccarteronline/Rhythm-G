//Online Soundsfunction loopBtnOn(){	__loopButton.gotoAndStop(1);	loopBtnState = true;	__root.settingsPad.hudText.text ="BLOCK: " + currentBlock + " LOOP ON";	__root.mpcPad["block_"+ currentBlock].loopIcon.alpha = 100;}function loopBtnOff(hudVal){	__loopButton.gotoAndStop(2);	loopBtnState = false;	__root.settingsPad.hudText.text = hudVal;	__root.mpcPad["block_"+ currentBlock].loopIcon.alpha = 0;}